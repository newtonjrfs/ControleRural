<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC0C0C0"
    tools:context="controlerural.newton.com.controlerural.ActivityTelaPrincipal">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/tlPrinCadCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/cor_botao"
            android:text="Cadastro de compra"
            android:textColor="@color/cor_letra" />

        <Button
            android:id="@+id/tlPrinListCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/cor_botao"
            android:text="listagem de compra"
            android:textColor="@color/cor_letra" />

        <Button
            android:id="@+id/tlPrinConsumo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/cor_botao"
            android:text="Consumo"
            android:textColor="@color/cor_letra" />

        <Button
            android:id="@+id/tlPrinOfertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/cor_botao"
            android:text="ofertas de compra"
            android:textColor="@color/cor_letra" />

        <Button
            android:id="@+id/tlPrinAnotacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/cor_botao"
            android:text="Anotações"
            android:textColor="@color/cor_letra" />

        <Button
            android:id="@+id/tlPrinInformacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/cor_botao"
            android:text="Informações"
            android:textColor="@color/cor_letra"
            android:textSize="15sp" />

        <Button
            android:id="@+id/tlPrinAjuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/cor_botao"
            android:text="Ajuda"
            android:textColor="@color/cor_letra"
            android:textSize="15sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
