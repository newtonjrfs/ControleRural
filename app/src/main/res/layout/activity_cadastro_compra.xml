<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC0C0C0"
    tools:context="controlerural.newton.com.controlerural.telaPrincipal.ActivityCadastroCompra">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="115dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:background="@color/cor_botao"
            android:paddingLeft="0dp">

            <RadioButton
                android:id="@+id/radioButtonBovino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Bovino"
                android:textAllCaps="true"
                android:textColor="@color/cor_letra"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButtonAve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Aves"
                android:textAllCaps="true"
                android:textColor="@color/cor_letra"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <RadioButton
                android:id="@+id/radioButtonSuino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Suino"
                android:textAllCaps="true"
                android:textColor="@color/cor_letra"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButtonEquino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Equino"
                android:textAllCaps="true"
                android:textColor="@color/cor_letra"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButtonPeixe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:padding="5dp"
                android:text="Peixes"
                android:textAllCaps="true"
                android:textColor="@color/cor_letra"
                android:textStyle="bold" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_alignTop="@+id/radioGroup"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/radioGroup"
            android:layout_toRightOf="@+id/radioGroup"
            android:background="@color/cor_botao"
            android:orientation="vertical">

            <Button
                android:id="@+id/tlCompraBtData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="Data"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
